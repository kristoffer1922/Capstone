<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfour"
    tools:context=".Lecture_Midterm">
    <Button
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:id="@+id/btnMidtermBack"
        android:layout_margin="30dp"
        android:background="@drawable/roundb"
        android:text="Back"
        android:textColor="#000"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:text="Midterm Period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/midtermone"
            android:text="Characters, String, and StringBuilder"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundb"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="Exception Handling"
            android:id="@+id/midtermtwo"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundb"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="Arrays and arrayList"
            android:id="@+id/midtermthree"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundb"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="Inheritance and Interface"
            android:id="@+id/midtermfour"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundb"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />




    </LinearLayout>
</RelativeLayout>